<h1>{{title}}</h1>
<p>Welcome to {{title}}</p>


<form action="/" method="GET">
    <input name="city" placeholder="Enter a city name" required>
    <input type="submit" value="Get Forecast">
</form>

{{#if forecast}}
<div>
    <h1>Current weather is:</h1>

    <h3>Temperature: {{forecast.current.temp}} C</h3>
    <p>{{forecast.current.weather.0.description}}</p>
</div>

{{/if}}
{{#each hourly}}
<ul class="hourly">

    <li>{{displayTime}}</li>
    <li>{{temp}} C</li>

</ul> {{/each}}